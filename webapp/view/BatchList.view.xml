<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:u="sap.ui.unified"
          controllerName="glw.controller.BatchList"
          displayBlock="true">
    <Page title="{i18n>appTitle}" showNavButton="true" navButtonPress=".onNavBack"
          class="sapUiResponsiveContentPadding">
        <Table
                id="batchTable"
                noDataText="Keine Charge vorhanden"
                mode="Delete"
                delete=".onDeleteBatchPress"
                items="{path: 'batches>/list', sorter: {path: 'productCategoryName'}}">
            <headerToolbar>
                <Toolbar>
                    <Title text="Chargen ({batches>/total_rows})" level="H2" width="9rem"/>
                    <ToolbarSpacer/>
                    <SearchField liveChange=".onSearchBatch" search=".onSearchBatch"/>
                    <Button icon="sap-icon://add" tooltip="Charge anlegen" press=".onOpenAddBatchDialogPress"/>
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column
                        width="12em">
                    <Text text="Produkt"/>
                </Column>
                <Column
                        minScreenWidth="Tablet"
                        demandPopin="true">
                    <Text text="Chargendatum"/>
                </Column>
                <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Right">
                    <Text text="Menge"/>
                </Column>
                <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Right">
                    <Text text="Alkoholgehalt"/>
                </Column>
                <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Right">
                    <Text text="Brennerlohn"/>
                </Column>
                <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Right">
                    <Text text="Steuer"/>
                </Column>
                <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Right">
                    <Text text="Summe"/>
                </Column>

            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{batches>productCategoryName}"/>
                        <Text text="{path: 'batches>batchDate', type:'sap.ui.model.type.Date'}"/>
                        <ObjectNumber
                                number="{path: 'batches>quantity', type:'sap.ui.model.type.Float', formatOptions: {maxFractionDigits: 2}}"
                                numberUnit="{parts: ['batches>productCategory', 'productCategories>/rows', 'validValues>/'], formatter: '.formatter.formatNumberUnitByProductCategoryId'}"/>
                        <ObjectNumber
                                number="{path: 'batches>vol', type:'sap.ui.model.type.Float', formatOptions: {maxFractionDigits: 2}}"
                                numberUnit="%"/>
                        <u:Currency value="{path: 'batches>distillerFee', type:'sap.ui.model.type.Float'}"
                                    currency="EUR"/>
                        <u:Currency value="{path: 'batches>taxes', type:'sap.ui.model.type.Float'}" currency="EUR"/>
                        <u:Currency value="{path: 'batches>totalFee', type:'sap.ui.model.type.Float'}" currency="EUR"/>
                    </cells>
                </ColumnListItem>

            </items>
        </Table>

    </Page>
</mvc:View>
