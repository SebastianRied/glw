<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"  xmlns:core="sap.ui.core"
          controllerName="glw.controller.StorageBinsList"
          displayBlock="true">
    <Page title="{i18n>appTitle}" showNavButton="true" navButtonPress=".onNavBack"
          class="sapUiResponsiveContentPadding">
        <Table
                id="storageBinTable"
				noDataText="Keine Lagerplätze vorhanden"
                mode="Delete"
                delete=".onDeleteStorageBinPress"
                items="{path: 'storageBins>/list', sorter: {path: 'value/id'}}">
            <headerToolbar>
                <Toolbar>
                    <Title text="Lagerplätze ({storageBins>/total_rows})" level="H2" width="9rem"/>
                    <ToolbarSpacer/>
					<SearchField liveChange=".onSearchStorageBin" search=".onSearchStorageBin"/>
                    <Button icon="sap-icon://add" tooltip="Lagerplatz anlegen" press=".onOpenAddStorageBinDialogPress"/>
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column
                        width="12em">
                    <Text text="Lagerplatznummer"/>
                </Column>
                <Column
                        minScreenWidth="Tablet"
                        demandPopin="true">
                    <Text text="Belegt"/>
                </Column>

            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{storageBins>value/id}"/>
                        <core:Icon
                                src="{= ${storageBins>value/used} ? 'sap-icon://complete' : 'sap-icon://border'}"
                                color="#333333" decorative="false" tooltip="Lagerplatz belegt"/>
                    </cells>
                </ColumnListItem>

            </items>
        </Table>

    </Page>
</mvc:View>
