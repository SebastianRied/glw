<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:f="sap.ui.layout.form"
        xmlns:l="sap.ui.layout"
        xmlns:core="sap.ui.core">
    <Dialog
            id="StorageBinAddDialog"
            title="Lagerplatz anlegen"
            class="sapUiResponsiveContentPadding">
        <content>
            <f:SimpleForm editable="true"
                          layout="ResponsiveGridLayout"
                          labelSpanXL="3"
                          labelSpanL="3"
                          labelSpanM="3"
                          labelSpanS="12"
                          adjustLabelSpan="false"
                          emptySpanXL="4"
                          emptySpanL="4"
                          emptySpanM="4"
                          emptySpanS="0"
                          columnsXL="1"
                          columnsL="1"
                          columnsM="1"
                          singleContainerFullSize="false">
                <f:content>
                    <Label text="Lagerplatznummer"/>
                    <Input
                            id="storageBinIdInput"
                            value="{path: '/storageBinId/value'}"
                            valueState="{/storageBinId/valueState}"
                            valueStateText="{/storageBinId/valueStateText}"/>
                </f:content>

            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Anlegen" press=".onSaveNewStorageBinPress"/>

        </beginButton>
        <endButton>
            <Button text="{i18n>dialogDoneButtonText}" press=".onCancelAddStorageBinDialogPress"/>

        </endButton>
    </Dialog>
</core:FragmentDefinition>