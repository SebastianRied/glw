<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:f="sap.ui.layout.form"
        xmlns:l="sap.ui.layout"
        xmlns:core="sap.ui.core">
    <Dialog
            id="ContainerAddDialog"
            title="Behälter anlegen"
            class="sapUiResponsiveContentPadding">
        <content>
            <f:SimpleForm editable="true"
                          layout="ResponsiveGridLayout"
                          labelSpanXL="3"
                          labelSpanL="3"
                          labelSpanM="3"
                          labelSpanS="12"
                          adjustLabelSpan="false"
                          emptySpanXL="4"
                          emptySpanL="4"
                          emptySpanM="4"
                          emptySpanS="0"
                          columnsXL="1"
                          columnsL="1"
                          columnsM="1"
                          singleContainerFullSize="false">
                <f:content>
                    <Label text="Behälter (Barcode)"/>
                    <Input
                            id="containerBarCodeInput"
                            value="{path: '/containerBarCode/value', type: 'sap.ui.model.type.Integer', formatOptions: {emptyString: null}}"
                            type="Number"
                            valueState="{/containerBarCode/valueState}"
                            valueStateText="{/containerBarCode/valueStateText}"/>
                    <Label text="Lagerplatz"/>
                    <ComboBox forceSelection="false"
                              items="{path: 'storageBins>/rows', sorter: {path: 'value/id'}}"
                              selectedKey="{/storageBin/value}"
                              valueState="{/storageBin/valueState}"
                              valueStateText="{/productCategory/valueStateText}">
                        <items>
                            <core:Item text="{storageBins>value/id}" key="{storageBins>value/id}"/>
                        </items>
                    </ComboBox>
                    <Label text="Typ"/>
                    <Select forceSelection="false"
                            items="{path: 'productCategories>/rows', filters: {path: 'value/productGroup', operator: 'Contains', value1: 'VERP'}}"
                            selectedKey="{/productCategory/value}"
                            valueState="{/productCategory/valueState}"
                            valueStateText="{/productCategory/valueStateText}">
                        <items>
                            <core:Item text="{productCategories>value/name}" key="{productCategories>value/_id}"/>
                        </items>
                    </Select>
                    <Label
                            text="Produktgruppe"
                            visible="{path: '/productCategory/value', formatter: '.formatter.formatTrueIfNotEmpty'}"/>
                    <Text
                            text="{parts: ['/productCategory/value', 'productCategories>/rows', 'validValues>/'], formatter: '.formatter.formatProductGroupByProductCategoryId'}"
                            visible="{path: '/productCategory/value', formatter: '.formatter.formatTrueIfNotEmpty'}"/>
                    <Label
                            text="Veredelung"
                            visible="{path: '/productCategory/value', formatter: '.formatter.formatTrueIfNotEmpty'}"/>
                    <Text
                            text="{parts: ['/productCategory/value', 'productCategories>/rows', 'validValues>/'], formatter: '.formatter.formatFinishingByProductCategoryId'}"
                            visible="{path: '/productCategory/value', formatter: '.formatter.formatTrueIfNotEmpty'}"/>
                </f:content>

            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Anlegen" press=".onSaveNewContainerPress"/>

        </beginButton>
        <endButton>
            <Button text="Fertig" press=".onCancelAddContainerDialogPress"/>

        </endButton>
    </Dialog>
</core:FragmentDefinition>